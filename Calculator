<body>
    <div class="container">
  <div class="row">
    <div class="col">
      <h1 align="center">Simple Calculator</h1>
    </div>
    
  </div>
  <div class="row">
    <div class="col">
      <input class="form-control" type="number"id="num1">
    </div>
    <div class="col">
      <input class="form-control" type="number"id="num2">
    </div>
    
  </div>
</div><br>
<div class="container" align="center">
    <button onclick="add()" class="btn btn-primary btn-lg">Add</button>
    <button onclick="sub()" class="btn btn-secondary btn-lg">Sub</button>
    <button onclick="mul()" class="btn btn-success btn-lg">Mul</button>
    <button onclick="div()"class="btn btn-danger btn-lg">Div</button>
    </div><br>
    <h3 id="1" align="center"></h3>

    
</body>
<script>
   
    function add(){
         x=parseFloat(document.getElementById('num1').value);
         y=parseFloat(document.getElementById('num2').value);
        document.getElementById(1).innerHTML=x+y;
    }
    function sub(){
         x=parseFloat(document.getElementById('num1').value);
         y=parseFloat(document.getElementById('num2').value);
        document.getElementById(1).innerHTML=x-y;
    }
    function mul(){
         x=parseFloat(document.getElementById('num1').value);
         y=parseFloat(document.getElementById('num2').value);
        document.getElementById(1).innerHTML=x*y;
    }
    function div(){
         x=parseFloat(document.getElementById('num1').value);
         y=parseFloat(document.getElementById('num2').value);
        document.getElementById(1).innerHTML=x/y;
    }
</script>
